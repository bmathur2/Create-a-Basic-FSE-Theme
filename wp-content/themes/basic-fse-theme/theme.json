{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "page-large-header",
			"title": "Page (Large Header)",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "single-no-separators",
			"title": "Single Post (No Separators)",
			"postTypes": [
				"post"
			]
		},
		{
			"name": "page-no-separators",
			"title": "Page (No Separators)",
			"postTypes": [
				"page"
			]
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultGradients": false,
			"customDuotone": false,
			"defaultPalette": false,
			"palette": [
				{
					"slug": "primary",
					"color": "#9c27B0",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#e91E63",
					"name": "Secondary"
				},
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "White"
				},
				{
					"slug": "neutral-0",
					"color": "#fafafa",
					"name": "Neutral 0"
				},
				{
					"slug": "neutral-1",
					"color": "#F5F5F5",
					"name": "Neutral 1"
				},
				{
					"slug": "neutral-2",
					"color": "#EEEEEE",
					"name": "Neutral 2"
				},
				{
					"slug": "neutral-3",
					"color": "#E0E0E0",
					"name": "Neutral 3"
				},
				{
					"slug": "neutral-4",
					"color": "#BDBDBD",
					"name": "Neutral 4"
				},
				{
					"slug": "neutral-5",
					"color": "#757575",
					"name": "Neutral 5"
				},
				{
					"slug": "neutral-6",
					"color": "#616161",
					"name": "Neutral 6"
				}
			]
		},
		"custom": {
			"spacing": {
				"baseline": "0.25rem",
				"small": 	"0.5rem",
				"medium": 	"1rem",
				"large": 	"1.5rem",
				"x-large": 	"2.5rem"
			},
			"typography": {
				"font-size": {
					"huge": "clamp(3.25rem, 4vw, 2.75rem)",
					"gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
					"colossal": "clamp(3.25rem, 8vw, 6.25rem)"
				}


			}
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"	
			],

			 "spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "spacingSizes": [
            	
            	{
                    "slug": "4",
                    "size": "0.25rem",
                    "name": "baseline"
                },
                {
                    "slug": "8",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "16",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "24",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "40",
                    "size": "2.5rem",
                    "name": "X Large"
                }
            ]
		},
		"typography": {
			"dropCap": true,
			"fontFamilies": [
				
				{
					"fontFamily": "\"RobotoRegular\", serif",
					"name": "Roboto",
					"slug": "roboto",
					"fontFace": [
						{
							"fontFamily": "RobotoRegular",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/roboto/RobotoRegular.woff2" ]
						}
					]
				},
				{
					"fontFamily": "\"RobotoMonoRegular\", serif",
					"name": "Roboto Mono",
					"slug": "roboto_mono",
					"fontFace": [
						{
							"fontFamily": "RobotoMonoRegular",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/roboto_mono/RobotoMonoRegular.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{
					
					"size": "0.875rem",
					"name": "Small",
					"slug": "small"
				},
				{
					"size": "1rem",
					"name": "Normal",
					"slug": "normal"
				},
				{
					"size": "1.125rem",
					"name": "Medium",
					"slug": "medium"
				},
				{
					"size": "1.25rem",
					"name": "Large",
					"slug": "large"
				},
				{
					"size": "1.375rem",
					"name": "X Large",
					"slug": "x-large"
				}
			]
		},
		"layout": {
			"contentSize": "650px",
			"wideSize": "1000px"
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},

				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto_mono)",
					"fontSize": "var(--wp--preset--font-size--normal)"
				},

				":hover": {
					"color": {
						"background": "var(--wp--preset--color--white)",
						"text": "var(--wp--preset--color--primary)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--white)",
						"text": "var(--wp--preset--color--primary)"
					}
				},

				"spacing": {
					"margin": {

						"top": "0rem",
						"right": "0rem",
						"bottom": "0.5rem",
						"left": "0rem"
					},

					"padding": {
						"top": "0.3rem",
						"right": "0.5rem",
						"bottom": "0.3rem",
						"left": "0.5rem"
					}
				}
			}
		},

		"color": {
			"background": "var(--wp--preset--color--primary)",
			"text": "var(--wp--preset--color--white)"
		},
		
		"elements": {

			"link": {
				"color": {
					"text": "var(--wp--preset--color--white)"
				},

				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto_mono)",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				},

				":hover": {

					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				}
			}
		},
		"spacing": {
			"padding": {
				"top": "0rem",
				"right": "0rem",
				"bottom": "0rem",
				"left": "0.5rem"
			},

			"margin": {

				"top": "0rem",
				"right": "0rem",
				"bottom": "0.5rem",
				"left": "0rem"
			}

			
		},
		"typography": {
			
			"fontFamily": "var(--wp--preset--font-family--roboto)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize": "var(--wp--preset--font-size--medium)"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},		
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
